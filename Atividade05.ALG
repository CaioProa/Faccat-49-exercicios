Algoritmo "semnome"

Var
valor: inteiro
antecessor: inteiro
Inicio
    // Ler um valor do usuário
    escreva("Digite um valor: ")
    leia(valor)

    // Calcular o antecessor
    antecessor := valor - 1

    // Exibir o antecessor
    escreva("O antecessor de ", valor, " é ", antecessor)
Fimalgoritmo